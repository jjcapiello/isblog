<div class="hero-unit">
    <h1>Nueva Noticia</h1>
</div>
<form action="/administracion/noticias/guardar" method="POST" id="formularioArticulo">
    #if( $articulo.id )
        <input type="hidden" name="id" value="$articulo.id" />
    #end
    #if( $articulo.fechaPublicacion )
        <input type="hidden" name="fechaPublicacion" value="$articulo.fechaPublicacion" />
    #end
    <label for="titulo">Titulo</label>
    <input type="text" name="titulo" id="titulo"
        #if( $articulo.titulo )
            value="$articulo.titulo"
        #end
/>
<label for="subtitulo">Subtitulo</label>
<input type="text" name="subtitulo" id="subtitulo"
    #if( $articulo.subtitulo )
        value="$articulo.subtitulo"
    #end
/>
<label for="cuerpo">Cuerpo</label>
<input type="text" name="cuerpo" id="cuerpo"
    #if( $articulo.cuerpo )
        value="$articulo.cuerpo"
    #end
/>
<div class="actions">
            <input type="submit" value="Guardar" class="btn primary"> o 
            <a href="/administracion/noticias" class="btn">Cancelar</a> 
        </div>
</form>
